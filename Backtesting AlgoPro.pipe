addPerc      = input.bool   (false,           'Add ï¼…â€ƒ',                    group=groupset, inline='hls', tooltip='Add % â” If true, then with the "S.FIXED" parameter you can add percentages to any of the current SL. \nFor example with LO/HI to put a stop for the last High/Low and add 0.5% additional Stoploss')
maStopLen    = input.int    (50,              'â€‚MA Lengthâ€‡â€ˆ',               group=groupset, inline='mas', minval=1, step=2)
maStopType   = input.string ('[5] RMA',       'â€‚MA Stopâ€‚â€‚â€‚',                   group=groupset, inline='mas', options=['[1] ALMA', '[2] EMA', '[3] HMA', '[4] LRC', '[5] RMA', '[6] SMA', '[7] VWMA', '[8] WMA', '[9] ZLMA'])
maAdaptive   = input.bool   (true,            'Adaptive',                   group=groupset, inline='mas', tooltip='MA Stop â” allows to choose which MA to use. \nâ— MA Len â” Length of chosen MA. \nâ— Adaptive â” Enabling Adaptive automatically adjusts any MA to the signal. This helps avoid closing trades quickly if the MA is not in the desired direction of the signal. \nâ— Adaptation is regulated S.VOLATY & Period & Factor. \nâ— WARNING: When Add % is on, the MA calculation changes.')
tvolatyType  = input.string ('ATR',           'ð—§.á´ á´ÊŸá´€á´›Ê',                   group=groupset, inline='vol', options=['ATR', 'STDEV', 'T.FIXED %', 'T.FIXED $'])
tperiod      = input.int    (40,              'Period',                     group=groupset, inline='vol', minval=1, step=1)
tmultiplier  = input.float  (3,               'Factor',                     group=groupset, inline='vol', minval=0.1, step=0.1, tooltip='T.VOLATY â” Automatically determines the Fixed Take Profit position based on Volatility. \nâ— ATR - Average True Range. \nâ— STDEV - Standard Deviation. \nâ— Period - Number of bars. \nâ— Factor - Multiplier.')
volatyType   = input.string ('ATR',           'ð—¦.á´ á´ÊŸá´€á´›Ê',                   group=groupset, inline='lov', options=['ATR', 'STDEV', 'S.FIXED %', 'S.FIXED $'])
period       = input.int    (40,              'Period',                     group=groupset, inline='lov', minval=1, step=1)
multiplier   = input.float  (3,               'Factor',                     group=groupset, inline='lov', minval=0.1, step=0.2, tooltip='S.VOLATY â” Automatically determines the Stop Loss position based on Volatility. \nâ— ATR - Average True Range. \nâ— STDEV - Standard Deviation. \nâ— Period - Number of bars. \nâ— Factor - Multiplier. \nWorks For: VOLATY, Trailing, Fast Trail, HILOEST, Activator, MA, SAR.')
sarstart     = input.float  (0.02,            'SAR Start',                  group=groupset, inline='sar', minval=-0.1, maxval=0.1, step=0.005)
sarinc       = input.float  (0.02,            'Increase',                   group=groupset, inline='sar', minval=0.0, maxval=9.0, step=0.005)
sarmax       = input.float  (0.20,            'Max',                        group=groupset, inline='sar', minval=0.0, maxval=9.0, step=0.005, tooltip='Starting Increase amount \n Example Inputs: \n 0.01 = Slow initial Increases \n 0.02 = Normal initial Increases (default) \n 0.03 = Fast initial Increases \n Acceleration Increase amount\n Example inputs: \n 0.001 = slow Trailing acceleration\n 0.02 = normal Trailing acceleration (default)\n 0.05 = Fast Trailing acceleration \n Max - amount the SAR can Increase per bar.')

bullcolor    = input.color  (#00bbd4fd,     'Colors: â€‚FG',                 group=grouptakes, inline='col')
bearcolor    = input.color  (#c2185cfd,     '',                            group=grouptakes, inline='col')
