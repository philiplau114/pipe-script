bearcolorb   = input.color  (#c2185c1a,     '',                            group=grouptakes, inline='col')

slNumber     = input.int    (3,               'â€‚SL 0 Position',             group=grouptakes, inline='pos', minval=1, maxval=5)
ontpBE       = input.bool   (false,           '',                           group=grouptakes, inline='pos')
