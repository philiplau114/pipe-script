typeSource   = input.string ('close',         'â€‚Sourceâ€€â€€â€€â€€',                group=groupset, inline='trl', options=['close', 'ohlc4', 'hlcc4', 'hlc3', 'hl2', 'high/low', 'low/high'])
fixedRR      = input.bool   (true,            'Fixed RR',                   group=groupset, inline='trl', tooltip='â— Fixed R:R â” If the stop loss is Dynamic then R:R can also be made Dynamic. \nâ— Source â” Selecting a source for the SL/TP calculation. For example, a fixed percentage can be calculated from the Close or Low of a candlestick.')
HHLL         = input.int    (100,             'â€‚HH / LLâ€ƒâ€‚â€‚',                group=groupset, inline='hls', minval=1, step=5)
